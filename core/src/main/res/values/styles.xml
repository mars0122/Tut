        <!--&lt;!&ndash; actionbar样式 &ndash;&gt;-->
        <!--<item name="android:actionBarStyle">@style/normal_actionbar_style</item>-->
        <!--<item name="actionBarStyle">@style/normal_actionbar_style</item>-->
        <!--<item name="android:spinnerStyle">@style/normal_spinner_style</item>-->
        <!--<item name="android:spinnerItemStyle">@style/normal_spinneritem_style</item>-->
        <!--<item name="android:spinnerDropDownItemStyle">@style/normal_dropdownitem_style</item>-->
        <!--<item name="android:dropDownListViewStyle">@style/normal_dropdownlistview_style</item>-->
