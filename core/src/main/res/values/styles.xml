<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 设置点击波纹效果颜色 -->
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">@color/c1</item>
        <!--页面背景色-->
        <item name="android:windowBackground">@color/c12</item>
        <!--底部导航栏颜色-->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/c3</item>
        <!--Appbar背景色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--ToolBar上的Title颜色-->
        <item name="android:textColorPrimary">@color/c13</item>
        <!--ToolBar的menu收起图标颜色-->
        <item name="android:textColorSecondary">@color/c11</item>
        <!--各个控制控件的默认颜色-->
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/c5</item>
        <!-- 不使用系统actionbar -->
        <item name="windowActionBar">false</item>
        <!-- 无标题栏 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 字体样式 -->
        <item name="android:typeface">monospace</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
