        <!-- menu样式 -->
        <item name="actionOverflowMenuStyle">@style/OverFlowMenuStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarSize">@dimen/py_actionbar_height</item>
    </style>

    <style name="normal_edittext_style" parent="android:Widget.EditText">
        <item name="android:background">@drawable/py_editext_bg</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/normal_edittext_cursor</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:height">?android:attr/listPreferredItemHeightSmall</item>
    </style>

    <style name="normal_actionBar_menu">
        <item name="android:textSize">@dimen/t2</item>
        <item name="android:textColor">@color/c12</item>
    </style>

    <!-- ActionBar样式 -->
    <style name="normal_actionbar_style" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">?attr/colorPrimary</item>
        <item name="backgroundStacked">?attr/colorPrimary</item>
        <item name="backgroundSplit">?attr/colorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation" tools:targetApi="lollipop">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <!-- actionbar高度设置 -->
        <item name="actionBarSize">@dimen/py_actionbar_height</item>
        <item name="android:actionBarSize">@dimen/py_actionbar_height</item>
        <item name="height">@dimen/py_actionbar_height</item>
    </style>

    <!-- ActionBar样式 -->
    <style name="ToolbarPopupTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="actionOverflowMenuStyle">@style/OverFlowMenuStyle</item>
    </style>

    <!-- Menu样式 -->
    <style name="OverFlowMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:windowDisablePreview">true</item>
        <item name="overlapAnchor">false</item>
        <item name="android:overlapAnchor" tools:targetApi="lollipop">false</item>
        <item name="android:popupBackground">@android:color/transparent</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:dropDownVerticalOffset">5.0dp</item>
        <item name="android:dropDownHorizontalOffset">-5.0dp</item>
        <item name="android:textColor">@color/c9</item>
    </style>

    <style name="normal_spinner_style" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/normal_spinner_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownSelector">@android:drawable/list_selector_background</item>
        <item name="android:popupBackground">@drawable/common_dropdown_bg</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="normal_spinneritem_style" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:background">@android:color/white</item>
        <item name="android:textAppearance">@style/normal_spinner_textAppearance</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:maxHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:checkMark">@null</item>
    </style>

    <style name="normal_spinner_textAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/t2</item>
    </style>

    <style name="normal_dropdownitem_style" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:background">@android:color/white</item>
        <item name="android:textAppearance">@style/normal_spinner_textAppearance</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:checkMark">@null</item>
    </style>

    <style name="normal_dropdownlistview_style" parent="android:Widget.ListView.DropDown">
        <item name="android:cacheColorHint">@null</item>;
        <item name="android:divider">@drawable/popupmenu_horizontal_divider</item>
        <item name="android:scrollbars">none</item>
        <item name="android:listSelector">@drawable/actionbar_bg_selector</item>
    </style>

    <style name="actionbar_title_text" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/c3</item>
        <item name="android:textSize">@dimen/t3</item>
    </style>

    <style name="normal_popupmenu_textAppearance">
        <item name="android:textColor">@color/c3</item>
        <item name="android:textSize">@dimen/t3</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

</resources>
