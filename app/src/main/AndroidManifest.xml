<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.dmio.org.tut">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:name=".application.ExApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.demo.view.paint.PaintActivity"/>
        <activity android:name=".activity.demo.view.image.WaveViewActivity"/>
        <activity android:name=".activity.demo.widget.wheelpicker.WheelPickerActivity"/>
        <activity android:name=".activity.demo.widget.sweetalert.SweetAlertActivity"/>
        <activity android:name=".activity.demo.widget.qrcode.DecoderActivity"/>
        <activity android:name=".activity.demo.widget.marqueeview.MarqueeViewActivity"/>
        <activity android:name=".activity.demo.security.ca.SecurityCAActivity"/>
        <activity android:name=".activity.guide.GuideMainActivity"/>
        <activity android:name=".activity.demo.widget.swipecard.SwipeCardActivity"/>
        <activity android:name=".activity.demo.widget.blurry.BlurryActivity"/>
    </application>

</manifest>