<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.dmio.org.tut.view.image.WaveView
                android:id="@+id/wv_content"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_below="@+id/wave"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                wave:above_wave_color="#4CAF50"
                wave:blow_wave_color="#FF0000"
                wave:progress="0"
                wave:wave_bg_color="#EBDCC1"
                wave:wave_height="little"
                wave:wave_hz="normal"
                wave:wave_length="little"/>
            <!--
                android:src="@drawable/txxy_score_bg"
                wave:wave_mask_res="@drawable/ic_home_score_mask" />
            -->

            <com.dmio.org.tut.view.image.GNWaveView
                android:id="@+id/wave"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_below="@+id/colorChoice"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"/>


            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/border"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/border"
                android:layout_below="@+id/shape"
                android:layout_toEndOf="@+id/border"
                android:layout_toRightOf="@+id/border"
                android:max="50"
                android:progress="10"/>

            <TextView
                android:id="@+id/border"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:layout_below="@+id/shape"
                android:gravity="center_vertical"
                android:text="border"/>

            <TextView
                android:id="@+id/shape"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:text="shape"/>

            <RadioGroup
                android:id="@+id/shapeChoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/shape"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/shape"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/shapeCircle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="circle"/>

                <RadioButton
                    android:id="@+id/shapeSquare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="square"/>
            </RadioGroup>

            <TextView
                android:id="@+id/color"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:layout_below="@+id/border"
                android:gravity="center_vertical"
                android:text="color"/>

            <RadioGroup
                android:id="@+id/colorChoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/color"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/colorDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="defaultColor"/>

                <RadioButton
                    android:id="@+id/colorRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="red"
                    android:textColor="@color/red"/>

                <RadioButton
                    android:id="@+id/colorGreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="green"
                    android:textColor="@color/green"/>

                <RadioButton
                    android:id="@+id/colorBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="blue"
                    android:textColor="@color/blue"/>
            </RadioGroup>

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>


